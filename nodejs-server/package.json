{
  "name": "server",
  "version": "0.1.0",
  "description": "Server for Charlie Demo",
  "scripts": {
    "clean": "rimraf dist/",
    "tsc": "tsc -p ./tsconfig.json",
    "copy-files": "copyfiles --flat config.json dist",
    "build": "npm run clean && npm run tsc && npm run copy-files",
    "build-server": "npm install && npm run build",
    "build-client": "cd ../client && npm install && npm run build",
    "copy-client": "cd .. && copyfiles -u 2 client/build/**/* server/dist/client/",
    "build-prod": "npm run build-server && npm run build-client && npm run copy-client",
    "start": "node ./dist/app.js"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.7",
    "@types/node": "^18.19.50",
    "@types/pouchdb": "^6.4.2",
    "@types/uuid": "^10.0.0",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.10",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.7",
    "body-parser": "^1.20.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "graphql": "^16.9.0",
    "lodash": "^4.17.21",
    "nano": "^10.1.4",
    "pouchdb": "^9.0.0",
    "pouchdb-find": "^9.0.0",
    "server": "file:",
    "uuid": "^10.0.0",
    "winston": "^3.14.2",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
